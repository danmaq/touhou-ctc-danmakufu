//	キャラカットインを会話に登場させる
function ChrIn( let szTexCutin, let Dir, let nWidth, let nHeight ){
	SetChar( Dir, szTexCutin );
	SetGraphicRect( dir, 1, 1, nWidth, nHeight );
}

//	左右キャラをを同時に下げる
function AllBack(){ ascent( let i in 0..2 ){ MoveChar( [ RIGHT, LEFT ][ i ], BACK ); } }

//	左右キャラの前後位置を同時に切り替える
//	※滅多なことがない限り以下のラッパー関数を使ってください
function _MoveChar( let bPlayer ){ ascent( let i in 0..2 ){ MoveChar( [ RIGHT, LEFT ][ i ], [ FRONT, BACK ][ [ bPlayer, !bPlayer ][ i ] ] ); } }

/*	↓↓↓以下全て_MoveChar()のラッパー関数↓↓↓	*/

//	プレイヤーを前に出し敵を下げる
function Player(){ _MoveChar( true ); }

//	敵を前に出しプレイヤーを下げる
function Enemy(){ _MoveChar( false ); }
