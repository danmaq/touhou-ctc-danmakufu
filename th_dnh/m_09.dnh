script_enemy t_ma_01
{

#include_function ".\INCLUDE\Shadow.dnh"

	let count=0;
	let Level=GetCommonData("Level");

task MainAction()
{
	yield;
	if(GetArgument()==0)
	{
		while(1)
		{
			CreateShotA(0,GetX(),GetY(),0);
			SetShotDataA(0,0,2,GetAngle()+180,[2,1,0.5,0.3][Level],0,0,RED11);
			SetShotKillTime(0,250);
			FireShot(0);
			CreateShotA(0,GetX(),GetY(),0);
			SetShotDataA(0,0,2,GetAngle()+180,-1*[2,1,0.5,0.3][Level],0,0,BLUE11);
			SetShotKillTime(0,250);
			FireShot(0);
			loop([30,20,12,8][Level]){yield;}
		}
	}
}



	@Initialize
	{	
		SetLife(30);
		LoadGraphic(imgcircle_t);
		MainAction()
	}
	@MainLoop
	{
		Deletemine();
		Gone();
		BehaviorShadow( 0,0 );
		count++;
	
		if(GetKeyState(VK_SLOWMOVE)==KEY_FREE)
		{
			Collision( 16,12 );
			if(int(count/3)==count/3)
			{
				CreateShotA(0,GetX(),GetY(),15);
				SetShotDataA(0,0,0,0,0,0,0,WHITE05);
				SetShotKillTime(0,0);
				FireShot(0);
			}
		}
		yield;
	}
	@DrawLoop
	{
		SetGraphicRect( 0,0,50,50 );
		DrawRotate( imgcircle_t, count*2 );
	}
	@Finalize
	{
		DestructShadow( 40 );
	}
}
