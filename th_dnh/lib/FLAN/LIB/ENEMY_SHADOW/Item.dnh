/**	敵が落とす点アイテム数を設定します。 */
let FLAN_ENEMY_ITEM			= 0;
/**	敵が落とすボムアイテム数を設定します。 */
let FLAN_ENEMY_ITEM_BOMB	= 0;
/**	敵が落とす1UPアイテム数を設定します。 */
let FLAN_ENEMY_ITEM_EXTEND	= 0;


