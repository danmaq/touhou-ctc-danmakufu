/**
*	点アイテムを落とします。
*
*	__DropItemのラッパーです。
*	@param nNum アイテムの数
*/
function DropItemPoint( let nNum ){ __DropItem( ITEM_SCORE, nNum ); }

/**
*	ボムアイテムを落とします。
*	__DropItemのラッパーです。
*
*	@param nNum アイテムの数
*/
function DropItemBomb( let nNum ){ __DropItem( ITEM_BOMB, nNum ); }

/**
*	エクステンドアイテムを落とします。
*	__DropItemのラッパーです。
*
*	@param nNum アイテムの数
*/
function DropItemExtend( let nNum ){ __DropItem( ITEM_1UP, nNum ); }

/**
*	アイテムを落とします。
*
*	@param nType アイテムの種類
*	@param nNum アイテムの数
*/
function __DropItem( let nType, let nNum ){
	if( BeVanished() || nNum <= 0 ){ return; }
	if( nNum == 1 ){ CreateItem( nType, GetX(), GetY() ); }
	else{
		let aanPosList = GetDropItemPosList( nNum );
		ascent( let i in 0..nNum ){
			let anPos = aanPosList[ i ];
			CreateItem( nType, anPos[ FLAN_ITEM_X ], anPos[ FLAN_ITEM_Y ] );
		}
	}
}
