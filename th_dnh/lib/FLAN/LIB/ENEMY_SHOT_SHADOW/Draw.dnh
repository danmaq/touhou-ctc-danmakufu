//--------------------------------------------------------------------
//	絵画関連
//--------------------------------------------------------------------
//////////////////////////////////////////////////////////////////////

/**	自分自身の座標にテクスチャを貼り付けます。
*	__DrawChrのラッパーです。
*	@param szTexFile 貼り付ける画像のファイルパス
*	@param nYGap Y座標のズレ
*/
function DrawChrGap( let szTexFile, let nYGap ){
	SetTexture( szTexFile );
	DrawGraphic( GetX(), GetY() + nYGap );
}

/**	自分自身の座標にテクスチャを貼り付けます。
*	自動的に縦方向に正弦波運動し、あたかも浮遊しているかのように表現します。
*	DrawChrGapのラッパーです。
*	@param szTexFile 貼り付ける画像のファイルパス
*/
function DrawChr( let szTexFile ){
	SetTexture( szTexFile );
	DrawGraphic( GetX(), GetY() + sin( m_nFlanCount * FLAN_ESS_FLOATMOVE_SPEED_DEFAULT ) * FLAN_ESS_FLOATMOVE_GAP_DEFAULT );
}

/**	自分自身の座標にテクスチャを回転貼り付けします。
*	@param szTexFile 貼り付ける画像のファイルパス
*	@param nSpeed 回転速度
*/
function DrawRotate( let szTexFile, let nSpeed ){
	SetGraphicAngle( 0, 0, m_nFlanCount * nSpeed );
	SetTexture( szTexFile );
	DrawGraphic( GetX(), GetY() );
	SetGraphicAngle( 0, 0, 0 );
}
