/** DrawChrにおけるキャラ浮遊効果のギャップ値。 */
let FLAN_ESS_FLOATMOVE_GAP_DEFAULT		= 8;
/** DrawChrにおけるキャラ浮遊効果の速度。 */
let FLAN_ESS_FLOATMOVE_SPEED_DEFAULT	= 2.5;


//////////////////////////////////////////////////////////////////////
//	メンバ変数(書換不可)
//////////////////////////////////////////////////////////////////////


