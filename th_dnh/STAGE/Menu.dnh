//	初期化
function MainMenuInitialize(){
	ForbidBomb( true );
	ForbidShot( true );
	LoadProgress( [ imgSystemFontSmall, imgSystemProgress, imgSystemFont, imgMapWhite, imgSystemLogo ], [ _enemyExtend ], [ seCancel, seOk, seSelect ] );
	ascent( let i in 0..length( m_aszMainMenu )			){ m_nTexTextHandleTitle			= m_nTexTextHandleTitle ~			[ CreateTexText48Cache( imgSystemFont, m_aszMainMenu[ i ] )					]; }
	ascent( let i in 0..length( m_aszLevel )			){ m_nTexTextHandleLevel			= m_nTexTextHandleLevel ~			[ CreateTexText48Cache( imgSystemFont, m_aszLevel[ i ] )					]; }
	ascent( let i in 0..length( m_aszExLevel )			){ m_nTexTextHandleExLevel			= m_nTexTextHandleExLevel ~			[ CreateTexText48Cache( imgSystemFont, m_aszExLevel[ i ] )					]; }
	ascent( let i in 0..length( m_aszPractice )			){ m_nTexTextHandlePractice			= m_nTexTextHandlePractice ~		[ CreateTexText48Cache( imgSystemFont, m_aszPractice[ i ] ~ " Practice" )	]; }
	ascent( let i in 0..length( m_aszConfig )			){ m_nTexTextHandleConfig			= m_nTexTextHandleConfig ~			[ CreateTexText32Cache( imgSystemFont, m_aszConfig[ i ] )					]; }
	ascent( let i in 0..length( m_aszStage )			){ m_nTexTextHandleStage			= m_nTexTextHandleStage ~			[ CreateTexText32Cache( imgSystemFont, "Stage " ~ m_aszStage[ i ] )			]; }
	ascent( let i in 0..length( m_aszScenario )			){ m_nTexTextHandleScenario			= m_nTexTextHandleScenario ~		[ CreateTexText32Cache( imgSystemFont, "Scenario " ~ m_aszScenario[ i ] )	]; }
	ascent( let i in 0..length( m_aszSpellSort )		){ m_nTexTextHandleSpellSort		= m_nTexTextHandleSpellSort ~		[ CreateTexText48Cache( imgSystemFont, m_aszSpellSort[ i ] )				]; }
	ascent( let i in 0..length( m_aszConfigGraphic )	){ m_nTexTextHandleConfigGraphic	= m_nTexTextHandleConfigGraphic ~	[ CreateTexText32Cache( imgSystemFont, m_aszConfigGraphic[ i ] )			]; }
	ascent( let i in 0..length( m_aszConfigSound )		){ m_nTexTextHandleConfigSound		= m_nTexTextHandleConfigSound ~		[ CreateTexText32Cache( imgSystemFont, m_aszConfigSound[ i ] )				]; }
	ascent( let i in 0..length( m_aszConfigButton )		){ m_nTexTextHandleConfigButton		= m_nTexTextHandleConfigButton ~	[ CreateTexText32Cache( imgSystemFont, m_aszConfigButton[ i ] )				]; }
	ascent( let i in 0..length( m_aszCopyright )		){ m_nTexTextHandleCopyright		= m_nTexTextHandleCopyright ~		[ CreateTexText16Cache( imgSystemFontSmall, m_aszCopyright[ i ] )			]; }
	SetStage( 0 );
}

//	フェーズごとのメニュー処理
function MainMenuPhase(){
	//	愚痴 : 弾幕風に変数の参照渡し機能があればここ超スマートに書けるんだが…orz
	alternative( GetPhase() )
	case( MENU_PHASE_MAIN ){
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH ){
			m_nSelectMain = MenuSelect( m_nSelectMain, seSelect, length( m_nTexTextHandleTitle ) );
			yield;
		}
		IsMenuEnter( seOk, seCancel );
		GosubPhase( m_nSelectMain + MENU_PHASE_LEVEL );
	}
	case( MENU_PHASE_LEVEL ){
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH && GetKeyStateEx( VK_BOMB ) != KEY_PUSH ){
			m_nSelectLevel = MenuSelect( m_nSelectLevel, seSelect, length( m_nTexTextHandleLevel ) );
			yield;
		}
		if( !IsMenuEnter( seOk, seCancel ) ){ ReturnPhase(); }
		else{ GosubPhase( MENU_PHASE_SCENARIO ); }
	}
	case( MENU_PHASE_EXTRA ){
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH && GetKeyStateEx( VK_BOMB ) != KEY_PUSH ){
			m_nSelectExLevel = MenuSelect( m_nSelectExLevel, seSelect, length( m_nTexTextHandleExLevel ) );
			yield;
		}
		IsMenuEnter( seOk, seCancel );
		ReturnPhase();
	}
	case( MENU_PHASE_PRACTICE ){
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH && GetKeyStateEx( VK_BOMB ) != KEY_PUSH ){
			m_nSelectPractice = MenuSelect( m_nSelectPractice, seSelect, length( m_nTexTextHandlePractice ) );
			yield;
		}
		if( !IsMenuEnter( seOk, seCancel ) ){ ReturnPhase(); }
		else{ GosubPhase( m_nSelectPractice + MENU_PHASE_PRACTICE_STAGE ); }
	}
	case( MENU_PHASE_RESULT ){ ReturnPhase(); }
	case( MENU_PHASE_MUSIC ){ ReturnPhase(); }
	case( MENU_PHASE_CONFIG ){
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH && GetKeyStateEx( VK_BOMB ) != KEY_PUSH ){
			m_nSelectConfig = MenuSelect( m_nSelectConfig, seSelect, length( m_nTexTextHandleConfig ) );
			yield;
		}
		if( !IsMenuEnter( seOk, seCancel ) ){ ReturnPhase(); }
		else{ GosubPhase( m_nSelectConfig + MENU_PHASE_CONFIG_GRAPHIC ); }
	}
	case( MENU_PHASE_PRACTICE_STAGE ){
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH && GetKeyStateEx( VK_BOMB ) != KEY_PUSH ){
			m_nSelectStage = MenuSelect( m_nSelectStage, seSelect, length( m_nTexTextHandleStage ) );
			yield;
		}
		IsMenuEnter( seOk, seCancel );
		ReturnPhase();
	}
	case( MENU_PHASE_PRACTICE_SPELL ){
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH && GetKeyStateEx( VK_BOMB ) != KEY_PUSH ){
			m_nSelectSpellSort = MenuSelect( m_nSelectSpellSort, seSelect, length( m_nTexTextHandleSpellSort ) );
			yield;
		}
		IsMenuEnter( seOk, seCancel );
		ReturnPhase();
	}
	case( MENU_PHASE_PRACTICE_BOSS ){ ReturnPhase(); }
	case( MENU_PHASE_CONFIG_GRAPHIC ){
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH && GetKeyStateEx( VK_BOMB ) != KEY_PUSH ){
			m_nSelectConfigGraphic = MenuSelect( m_nSelectConfigGraphic, seSelect, length( m_nTexTextHandleConfigGraphic ) );
			yield;
		}
		IsMenuEnter( seOk, seCancel );
		ReturnPhase();
	}
	case( MENU_PHASE_CONFIG_SOUND ){
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH && GetKeyStateEx( VK_BOMB ) != KEY_PUSH ){
			m_nSelectConfigSound = MenuSelect( m_nSelectConfigSound, seSelect, length( m_nTexTextHandleConfigSound ) );
			yield;
		}
		IsMenuEnter( seOk, seCancel );
		ReturnPhase();
	}
	case( MENU_PHASE_CONFIG_BUTTON ){
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH && GetKeyStateEx( VK_BOMB ) != KEY_PUSH ){
			m_nSelectConfigButton = MenuSelect( m_nSelectConfigButton, seSelect, length( m_nTexTextHandleConfigButton ) );
			yield;
		}
		IsMenuEnter( seOk, seCancel );
		ReturnPhase();
	}
	case( MENU_PHASE_RESET_CONFIG ){ ReturnPhase(); }
	case( MENU_PHASE_RESET_ALL ){ ReturnPhase(); }
	case( MENU_PHASE_SCENARIO ){
		//	TODO : 体験版までには自機魔理沙における分岐に置き換える
		while( GetKeyStateEx( VK_SHOT ) != KEY_PUSH && GetKeyStateEx( VK_BOMB ) != KEY_PUSH ){
			m_nSelectScenario = MenuSelect( m_nSelectScenario, seSelect, length( m_nTexTextHandleScenario ) );
			yield;
		}
		if( !IsMenuEnter( seOk, seCancel ) ){ ReturnPhase(); }
		else{
			ClearPhase();
			m_nStageLevel = m_nSelectLevel;
			m_nScenario = m_nSelectScenario;
			Stage1();
			return false;
		}
	}
	return true;
}


