//	メインタスク
task MainMenu(){
	MainMenuInitialize();
	while( MainMenuPhase() ){ yield; }
}

//	@MainLoop()にて毎フレーム呼ばれる部分
function MainMenuLoop(){ MovePlayerDefaultPosition(); }

//	@BackGround()にて毎回呼ばれる部分
function MainMenuDrawBackGround(){}

//	@DrawBottomObject()にて毎回呼ばれる部分
function MainMenuDrawBottomObject(){}

//	@DrawTopObject()にて毎回呼ばれる部分
function MainMenuDrawTopObject(){
	if( GetPhase() == PROGRESS_PHASE ){ SetAlpha( SlowDown( 255, 0, m_nPhaseNow, MENU_FADE / 2 ) ); }
	DrawScreenFill( imgMapWhite );
	DrawMenu( MENU_PHASE_MAIN,				8, 32, 64, 240, m_nTexTextHandleTitle,			m_nSelectMain );
	DrawMenu( MENU_PHASE_LEVEL,				8, 32, 64, 240, m_nTexTextHandleLevel,			m_nSelectLevel );
	DrawMenu( MENU_PHASE_EXTRA,				8, 32, 64, 240, m_nTexTextHandleExLevel,		m_nSelectExLevel );
	DrawMenu( MENU_PHASE_PRACTICE,			8, 32, 64, 240, m_nTexTextHandlePractice,		m_nSelectPractice );
	DrawMenu( MENU_PHASE_CONFIG,			8, 32, 64, 240, m_nTexTextHandleConfig,			m_nSelectConfig );
	DrawMenu( MENU_PHASE_PRACTICE_STAGE,	8, 32, 64, 240, m_nTexTextHandleStage,			m_nSelectStage );
	DrawMenu( MENU_PHASE_PRACTICE_SPELL,	8, 32, 64, 240, m_nTexTextHandleSpellSort,		m_nSelectSpellSort );
	DrawMenu( MENU_PHASE_CONFIG_GRAPHIC,	8, 32, 64, 240, m_nTexTextHandleConfigGraphic,	m_nSelectConfigGraphic );
	DrawMenu( MENU_PHASE_CONFIG_SOUND,		8, 32, 64, 240, m_nTexTextHandleConfigSound,	m_nSelectConfigSound );
	DrawMenu( MENU_PHASE_CONFIG_BUTTON,		8, 32, 64, 240, m_nTexTextHandleConfigButton,	m_nSelectConfigButton );
	DrawMenu( MENU_PHASE_SCENARIO,			8, 32, 64, 240, m_nTexTextHandleScenario,		m_nSelectScenario );
	if( GetPhase() == PROGRESS_PHASE ){ SetAlpha( SlowDown( 255, 0, m_nPhaseNow, MENU_FADE / 2 ) ); }
	else{ SetAlpha( Accelerate( 0, 255, m_nStageNow, MENU_FADE ) ); }
	SetGraphicRect( 0, 0, 128, 256 );
	_DrawChr( imgSystemLogo, GetClipMaxX() - 32, GetCenterY() - 64 );
	SetGraphicScale( 1, 1 );
	ascent( let i in 0..2 ){ DrawTexTextOnCache( m_nTexTextHandleCopyright[ i ], 0, 288, 432 + i * 16 ); }
	SetAlpha( 255 );
}
