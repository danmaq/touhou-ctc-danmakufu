//	初期化
function Stage1BInitialize(){
	SetCommonData("Level",m_nStageLevel);
	SetCommonData("DeleteEnemy",0);
	LoadProgress( m_aszStageDefaultLoadFileListGraphic ~ m_aszStage1BLoadFileListGraphic, m_aszStage1BLoadFileListEnemy, m_aszStageDefaultLoadFileListSE ~ m_aszStage1BLoadFileListSound );
}

//	ここにステージの中身を書く
task Stage1B(){

	_Wait(200);

//---------------------------------------------------------------

	loop(8)
	{
		CreateEnemyFromFile(z_g_04,GetCenterX()*1.5+rand(-50,+50),GetClipMinY()-20,rand(2,5),90+rand(0,30),0);
		_Wait(16);
	}

	_Wait(100);

	loop(8)
	{
		CreateEnemyFromFile(z_g_04,GetCenterX()/2+rand(-50,+50),GetClipMinY()-20,rand(2,5),90+rand(-30,0),0);
		_Wait(16);
	}

	_Wait(300);


//---------------------------------------------------------------

	CreateEnemyFromFile(z_m_09,GetCenterX(),GetClipMinY()-20,6,90,3);

	_Wait(400);


//---------------------------------------------------------------

	loop(5)
	{
		CreateEnemyFromFile(z_s_04,GetCenterX()*1.5+rand(-50,+50),GetClipMinY()-20,rand(0.8,1.3),90+rand(0,30),0);
	}
	_Wait(100);

	loop(5)
	{
		CreateEnemyFromFile(z_s_04,GetCenterX()/2+rand(-50,+50),GetClipMinY()-20,rand(0.8,1.3),90+rand(0,30),0);
	}
	_Wait(300);

//---------------------------------------------------------------

	loop(8)
	{
		CreateEnemyFromFile(z_g_04,GetCenterX()*1.5+rand(-50,+50),GetClipMinY()-20,rand(2,5),90+rand(0,30),0);
		_Wait(16);
	}

	_Wait(100);

	loop(8)
	{
		CreateEnemyFromFile(z_g_04,GetCenterX()/2+rand(-50,+50),GetClipMinY()-20,rand(2,5),90+rand(-30,0),0);
		_Wait(16);
	}

	_Wait(300);

//---------------------------------------------------------------

	CreateEnemyFromFile(z_m_09,GetCenterX()/2,GetClipMinY()-20,5,90,0);
	_Wait(300);
	CreateEnemyFromFile(z_m_09,GetCenterX()*1.5,GetClipMinY()-20,5,90,1);
	_Wait(450);
	CreateEnemyFromFile(z_m_09,GetCenterX()/2,GetClipMinY()-20,5,90,0);
	CreateEnemyFromFile(z_m_09,GetCenterX()*1.5,GetClipMinY()-20,5,90,1);

	_Wait(250);
	DeleteEnemyShotToItem(ALL);
	SetCommonData("DeleteEnemy",1);


///////////////////////////////////////////////////////////////////////
//ここに中ボスが入る
	_Wait(100);
///////////////////////////////////////////////////////////////////////

	SetCommonData("DeleteEnemy",0);
	_Wait(200);

//---------------------------------------------------------------

	loop(8)
	{
		CreateEnemyFromFile(z_g_04,GetCenterX()*1.5+rand(-50,+50),GetClipMinY()-20,rand(2,5),90+rand(0,30),0);
		CreateEnemyFromFile(z_g_04,GetCenterX()/2+rand(-50,+50),GetClipMinY()-20,rand(2,5),90+rand(-30,0),0);
		_Wait(16);
	}

	_Wait(300);

//---------------------------------------------------------------

	loop(2)
	{
		CreateEnemyFromFile(z_m_07,GetCenterX()*1.5,GetClipMinY()-20,5,90,11);
	
		let i=0;
		loop(10)
		{
			CreateEnemyFromFile(z_s_04,Smooth(GetClipMinX()+20,GetClipMaxX()-20,i,10),GetClipMinY()-20,2,90,0);
			_Wait(30);
			i++;
		}
	
		CreateEnemyFromFile(z_m_07,GetCenterX()/2,GetClipMinY()-20,5,90,10);
	
		let i=0;
		loop(10)
		{
			CreateEnemyFromFile(z_s_04,Smooth(GetClipMaxX()-20,GetClipMinX()+20,i,10),GetClipMinY()-20,2,90,0);
			_Wait(30);
			i++;
		}
	}

	_Wait(300);

//---------------------------------------------------------------

	loop(2)
	{
		CreateEnemyFromFile(z_m_08,GetCenterX()*1.5,GetClipMinY()-20,4,90,0);
		_Wait(150);
		CreateEnemyFromFile(z_m_08,GetCenterX()/2,GetClipMinY()-20,4,90,0);
		_Wait(150);
	}


	_Wait(200);

	DeleteEnemyShotToItem(ALL);
	SetCommonData("DeleteEnemy",1);
	_Wait(10);
	SetCommonData("DeleteEnemy",0);


///////////////////////////////////////////////////////////////////////
//ここにボスが入る
	_Wait(100);
///////////////////////////////////////////////////////////////////////



//ショットキーを押すと次のステージへ////////////////
	while(GetKeyState(VK_SHOT) != KEY_PUSH)
	{
		yield;
	}
////////////////////////////////////////////////////

	Stage2();
}


