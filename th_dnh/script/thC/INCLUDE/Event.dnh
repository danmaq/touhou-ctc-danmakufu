#include_function ".\IMAGE\CHAR\CUTIN\index.dnh"


//////////////////////////////////////////////////////////////////////
//--------------------------------------------------------------------
//	定数
//--------------------------------------------------------------------
//////////////////////////////////////////////////////////////////////

//　カットイン定数
let CUT_NORMAL = 0;		//　通常

//　描画矩形定数
let RECT_CUT_LENGTH_X = 192;
let RECT_CUT_LENGTH_Y = 256;
let RECT_CUT_NORMAL = [ 0, 0 ];


//////////////////////////////////////////////////////////////////////
//--------------------------------------------------------------------
//	未分類
//--------------------------------------------------------------------
//////////////////////////////////////////////////////////////////////

//	キャラカットインを会話に登場させる
//　※motionにはカットイン定数を指定
function ChrIn( let szTexCutin, let dir, let motion ){
	let rect = [];
	alternative( motion )
	case( CUT_NORMAL ){ rect = rect ~ RECT_CUT_NORMAL; }
	others{ return; }
	SetChar( dir, szTexCutin );
	SetGraphicRect( dir, rect[ 0 ], rect[ 1 ], RECT_CUT_LENGTH_X, RECT_CUT_LENGTH_Y );
}

//	左右キャラをを同時に下げる
function AllBack(){ ascent( let i in 0..2 ){ MoveChar( [ RIGHT, LEFT ][ i ], BACK ); } }

//	左右キャラの前後位置を同時に切り替える
//	※滅多なことがない限り以下のラッパー関数を使ってください
function _MoveChar( let bPlayer ){ ascent( let i in 0..2 ){ MoveChar( [ RIGHT, LEFT ][ i ], [ FRONT, BACK ][ [ bPlayer, !bPlayer ][ i ] ] ); } }

/*	↓↓↓以下全て_MoveChar()のラッパー関数↓↓↓	*/

//	プレイヤーを前に出し敵を下げる
function Player(){ _MoveChar( true ); }

//	敵を前に出しプレイヤーを下げる
function Enemy(){ _MoveChar( false ); }
