script_enemy Shadow{


//////////////////////////////////////////////////////////////////////
//	ライブラリのインクルード
//////////////////////////////////////////////////////////////////////

	#include_function ".\INCLUDE\Shadow.dnh"


//////////////////////////////////////////////////////////////////////
//	定数(書換不可)
//////////////////////////////////////////////////////////////////////


//////////////////////////////////////////////////////////////////////
//	定数(書換可能)
//////////////////////////////////////////////////////////////////////

	FLAN_ESS_NOGONE = false;
	FLAN_RINGOUT_BORDER = 48;
	FLAN_SHADOW_LIGHTING = true;
	FLAN_SHADOW_COLLISION = true;
	FLAN_SHADOW_DELETE_SHOT = 32;
	FLAN_ENEMY_COLLISION_A = 24;
	FLAN_ENEMY_COLLISION_B = 0;

//////////////////////////////////////////////////////////////////////
//	定数(書換可能)独自ショートカットShadowBody専用
//////////////////////////////////////////////////////////////////////

	let SHADOW_LIFE = 30;
	let SHADOW_COLOR = SHADOW_COLOR_BLUE;

//////////////////////////////////////////////////////////////////////
//	定数宣言
//////////////////////////////////////////////////////////////////////

	let gap=10;
	let angle=0;
	let add_angle=[-1,1][GetArgument()<90];

//////////////////////////////////////////////////////////////////////
//	固有処理
//////////////////////////////////////////////////////////////////////

task MainAction( let nLevel ){
	__Wait(int(rand(0,15)));
	while(1){
		_RoundShot02(GetX(),GetY(),0,0.02,rand(1.2,2.5),rand(0,360),[3,3,5,6][nLevel],US_ICE_PURPLE,5);
		PlaySEEx(seShot2);
		loop([16,13,10,9][nLevel]){yield;}
	}
}
task SubAction01( let nLevel ){
	SetCoordinateType(COODINATE_TYPE_PARENT);
	let count=0;
	while(!BeParentVanished()){
		SetX(cos(GetArgument()+angle)*gap);
		SetY(sin(GetArgument()+angle)*gap);
		yield;
		count++;
		angle+=add_angle;
		gap+=count^0.5/3;
	}
	VanishEnemy();
}


	#include_function ".\INCLUDE\ShadowBody.dnh"

}
